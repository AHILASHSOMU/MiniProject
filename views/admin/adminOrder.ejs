                                                        <table id="pdfTable"
                                                            class="table text-responsive align-middle table-striped table-hover mb-0">
                                                            <thead>
                                                                <tr>
                                                                    <th scope="col">SI NO</th>
                                                                    <th scope="col">Order Id</th>
                                                                    <th scope="col">User Name</th>
                                                                    <th scope="col">Time</th>
