                                                        <div class="bg-light rounded h-100 p-4">
                                                            <table id="pdfTable"
                                                                class="table text-responsive align-middle table-striped table-hover mb-0">
                                                                <thead>
                                                                    <tr>
                                                                        <th scope="col">SI NO</th>
                                                                        <th scope="col">Order Id</th>
                                                                        <th scope="col">User Name</th>
                                                                        <th scope="col">Time</th>
                                                                        <th scope="col">Mode</th>
                                                                        <th scope="col">Total Price</th>
                                                                        <th scope="col">Status</th>
                                                                        <th scope="col">Actions</th>
                                                                        <th scope="col">Details</th>

                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <% if( order.length> 0){ %>
                                                                        <% for(let i=1;i <=order.length; i++){ %>
                                                                            <tr>
                                                                                <th scope="row">
                                                                                    <%= i %>
                                                                                </th>
                                                                                <td>
                                                                                    <%= order[i-1]._id %>
                                                                                </td>
                                                                                <td>
                                                                                    <%= order[i-1].userId.name %>
                                                                                </td>
                                                                                <td>
                                                                                    <%= order[i-1].createdAt.toDateString()
                                                                                        %>
                                                                                </td>
                                                                                <td>
                                                                                    <%= order[i-1].payment %>
                                                                                </td>
                                                                                <td>
                                                                                    <%= order[i-1].products.totalPrice
                                                                                        %>
                                                                                </td>
                                                                                <td>
                                                                                    <%= order[i-1].status %>
                                                                                </td>
                                                                                <td>
                                                                                    <a href="/admin/adminCancelOrder?id=<%= order[i-1]._id %>"
                                                                                        class="btn btn-outline-danger mb-1">Cancel
                                                                                        Order</a>
                                                                                    <a href="/admin/adminConfirmOrder?id=<%= order[i-1]._id %>"
                                                                                        class="btn btn-outline-success ">Confirm
                                                                                        Order</a>
                                                                                </td>
