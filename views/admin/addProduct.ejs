                        <div class="d-flex flex-row align-items-center mb-4">

                          <div class="form-outline flex-fill mb-0">
                            <label class="form-label" for="form3Example1c">Price</label>
                            <input type="number" id="form3Example1c" class="form-control" name="gPrice" required />

                          </div>
                        </div>
                        <div class="d-flex flex-row align-items-center mb-4">

                          <div class="form-outline flex-fill mb-0">
                            <label class="form-label" for="form3Example1c">Stock</label>
                            <input type="number" id="form3Example1c" class="form-control" name="gStock" required />

                          </div>
                        </div>

                        <div class="d-flex flex-row align-items-center mb-4">

                          <div class="form-outline flex-fill mb-0">
                            <label class="form-label" for="form3Example4c">Rating</label>
                            <input type="text" id="form3Example4c" class="form-control" name="gRating" required />

                          </div>
                        </div>

