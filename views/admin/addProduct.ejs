                        <script>

                        </script>
                        <div class="d-flex flex-row align-items-center mb-4">

                          <div class="form-outline flex-fill mb-0">
                            <label class="form-label  select-label" name="gCategory"
                              for="form3Example1c">Category</label>
                            <select name="gCategory" class="form-control">
                              <option value="" disabled selected>Select a Type</option>
                              <% if(category){ %>
                                <% for(let i=1;i <=category.length; i++){ %>
                                  <option value="<%= category[i-1].name %>">
                                    <%= category[i-1].name %>
                                  </option>
                                  <% } %>
                                    <% }else{ %>
                                      <h1>No Categories to add</h1>
                                      <% } %>
                            </select>
                          </div>
                        </div>


                        <div class="d-flex flex-row align-items-center mb-4">

                          <div class="form-outline flex-fill mb-0">
                            <label class="form-label" for="form3Example4c">Image</label>
                            <input type="file" id="form3Example4c" class="form-control" name="uploaded_file" id="formFileMultiple"
                            accept="image/png, image/gif, image/jpeg" multiple/>

                          </div>
                        </div>

                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
