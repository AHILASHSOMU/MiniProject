            <div class="col-md-12">
                <div class="card card-plain">
                    <div class="header">
                        <h4 class="title">List Of Products</h4>
                        <br>
                        <div class="text-right">
                            <a href="/admin/adminaddProduct" class="btn btn-danger text-white">Add Products</a>
                        </div>
                        <!-- <p class="category">Here is a subtitle for this table</p> -->
                    </div>
                    <!-- <div class="col-7">
                        <div class="text-end upgrade-btn">
                            <a href="/admin/adminaddProduct" class="btn btn-danger text-white">Add Products</a>
                        </div>
                    </div> -->
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">SI NO</th>
                                    <th scope="col">Product Name</th>
                                    <th scope="col">Category</th>
                                    <!-- <th scope="col">Dress type</th> -->
                                    <th scope="col">Price</th>
                                    <th scope="col">Stock</th>
                                    <th scope="col">Rating</th>
                                    <th scope="col">Image</th>
                                    <th scope="col">Actions</th>
                                    <!-- <th scope="col">Actions</th> -->
                                </tr>
                            </thead>
                            <tbody>
                                <% if( products.length> 0){ %>
                                    <% for(let i=1;i <=products.length; i++){ %>
                                        <% if(products[i-1]){ %>
                                            <tr>
                                                <th scope="row">
                                                    <%= i %>
                                                </th>
                                                <td>
                                                    <%= products[i-1].productname %>
                                                </td>

                                                <td>
                                                    <%= products[i-1].category %>
                                                </td>
                                                <td>
                                                    <%= products[i-1].price %>
                                                </td>
                                                <td>
                                                    <%= products[i-1].stock %>
                                                </td>
                                                <td>
                                                    <%= products[i-1].rating %>
                                                </td>
                                                <td>
                                                    <% if(products[i-1].image) { %>
                                                        <img src="/banners/<%= products[i-1].image[0] %>"
                                                            width="100vw" height="100vh">
                                                        <% }else{ %>
                                                            Image Not Found
                                                            <% } %>
                                                </td>
                                                <td>
                                                    <a class="btn btn-success"
                                                        href="/admin/edit-product?id=<%= products[i-1]._id %>"><i
                                                            style="color: green;"
                                                            class="m-r-5 mdi mdi-border-color"></i>Edit</a><br>
                                                    
                                                            <% if(products[i-1].isAvailable) { %>

                                                    <a class="btn btn-danger text-white unshow"
                                                        href="/admin/delete-product?id=<%= products[i-1]._id %>">Hide</a>

                                                            <% } else { %>

                                                    <a class="btn btn-success show"
                                                        href="/admin/delete-product?id=<%= products[i-1]._id %>">Show</a>

                                                            <% } %>

                                                </td>

                                               
                                            </tr>
                                            <% } %>
                                                <% }} else { %>
                                                    <tr>
                                                        <td colspan="5">Products Not Found</td>
                                                    </tr>
                                                    <% } %>

                            </tbody>
                        </table>

                    </div>
                </div>
